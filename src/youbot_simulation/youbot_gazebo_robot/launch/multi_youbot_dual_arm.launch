<?xml version="1.0"?>
<launch>
    <arg name="robot_name"/>
    <arg name="init_pose"/>

  <!-- <arg name="world" default="robocup_at_work_2012"/> -->
  <!-- <arg name="world" default="test"/> -->

  <!-- <arg name="init_pos_x" default="0.0"/>
  <arg name="init_pos_y" default="0.0"/>
  <arg name="init_pos_z" default="0.2"/> -->

  <!-- launch world -->
  <!-- <include file="$(find youbot_gazebo_worlds)/launch/$(arg world).launch" /> -->


  <param name="robot_description" command="$(find xacro)/xacro $(find youbot_description)/robots/youbot_dual_arm.urdf.xacro --inorder namespace:=$(arg robot_name)" />

  <node name="spawn_minibot_model" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" 
     args="$(arg init_pose) 
            -param /$(arg robot_name)/robot_description 
            -urdf 
            -model $(arg robot_name)">
  </node>



  <!-- <node pkg="gazebo_ros" type="spawn_model" name="spawn_robot" respawn="false" output="screen"
    args="$(arg init_pose)
          -param /$(arg robot_name)/robot_description
          -urdf
          -model $(arg robot_name)">
  </node> -->

  <!-- launch joint state controller -->
  <include file="$(find youbot_gazebo_control)/launch/joint_state_controller.launch" />

  <!-- launch base controller -->
  <rosparam file="$(find youbot_gazebo_control)/config/base_controller.yaml" command="load" ns=""/> 

  <include file="$(find youbot_gazebo_control)/launch/base_controller.launch"> 
    <arg name="robot_name"  value="$(arg robot_name)" />
  </include>

  <!-- launch arm and gripper controller for the first arm-->
  <include file="$(find youbot_gazebo_control)/launch/arm_controller.launch" />


  

  <!-- launch arm and gripper controller for the second arm-->
  <include file="$(find youbot_gazebo_control)/launch/arm_controller.launch" >
    <arg name="arm_name" value="arm_2"/>
  </include>



  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" type="double" value="50.0" />
  </node>

</launch>
